<resources>

    <style name="Base.Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base.Theme.Bangumi" parent="Base.Theme">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="colorSurfaceContainer">@color/md_theme_light_surfaceContainer</item>
        <item name="colorSurfaceContainerHigh">@color/md_theme_light_surfaceContainer</item>
    </style>

    <style name="Theme.Bangumi" parent="Base.Theme.Bangumi">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

        <!-- Fix CollapsingToolbar with theme material3 -->
        <item name="collapsingToolbarLayoutStyle">@style/Theme.Bangumi.CollapsingToolbar</item>
        <item name="toolbarStyle">@style/Theme.Bangumi.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Theme.Bangumi.AppBarTheme</item>

        <!-- 段落行高自定义 -->
        <item name="textAppearanceTitleLarge">@style/textAppearanceTitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/textAppearanceTitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/textAppearanceTitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/textAppearanceBodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/textAppearanceBodyMedium</item>
        <item name="textAppearanceBodySmall">@style/textAppearanceBodySmall</item>
        <item name="textAppearanceLabelLarge">@style/textAppearanceLabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/textAppearanceLabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/textAppearanceLabelSmall</item>
    </style>

    <style name="Theme.Bangumi.Font" parent="Theme.Bangumi">
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.Bangumi.Divider">
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:alpha">0.1</item>
    </style>

    <style name="Theme.Bangumi.ToolbarTitle">
        <item name="android:textSize">@dimen/ui_font_22</item>
    </style>

    <style name="Theme.Bangumi.ExpandTitle">
        <item name="android:textSize">@dimen/ui_font_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Bangumi.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.Bangumi.PopupOverlay" parent="ThemeOverlay.Material3.DynamicColors.DayNight" />

    <style name="Theme.Bangumi.ImageCornerSmall">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSize">@dimen/ui_layout_radius</item>
    </style>

    <style name="Theme.Bangumi.ImageCornerStartSmall">
        <item name="cornerFamily">?attr/shapeCornerFamily</item>
        <item name="cornerSizeTopLeft">@dimen/ui_layout_radius</item>
        <item name="cornerSizeBottomLeft">@dimen/ui_layout_radius</item>
    </style>

    <style name="Theme.Bangumi.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault" />

    <style name="Theme.Bangumi.AppWidgetContainer" parent="Theme.Bangumi.AppWidgetContainerParent" />
</resources>